# OpenAI API Key for GPT-4 move decisions
OPENAI_API_KEY=sk-...

# OpenAI model to use (default: gpt-4-turbo-preview)
OPENAI_MODEL=gpt-4-turbo-preview

# Agent wallet private key (with Sepolia ETH for gas)
PRIVATE_KEY=0x...

# SimPhanToe contract address on Sepolia
SIMPHANTOE_ADDRESS=0x52507f480444c844b1AB304f4Cbc5fED6077E8f0

# Sepolia RPC URL (Alchemy, Infura, or other provider)
SEPOLIA_RPC_URL=https://eth-sepolia.g.alchemy.com/v2/your-api-key

# Sepolia WebSocket URL (optional, for real-time events)
# If not provided, the agent will try to derive it from RPC URL or use polling
SEPOLIA_WS_URL=wss://eth-sepolia.g.alchemy.com/v2/your-api-key

# PostgreSQL database configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=simphantoe
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-password

# Polling interval in milliseconds (default: 5000)
# Only used in legacy single-game mode; orchestrator uses smart scheduling
POLL_INTERVAL=5000

# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info
